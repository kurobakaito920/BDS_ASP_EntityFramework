            @Html.DisplayNameFor(model => model.transaction.transaction_date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.export_invoice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.total_prices)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.customer.customer_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.transaction.transaction_date)
