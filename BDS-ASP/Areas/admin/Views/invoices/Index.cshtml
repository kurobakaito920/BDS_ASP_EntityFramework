@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.export_invoice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.total_prices)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.customer.customer_name)
        </th>
